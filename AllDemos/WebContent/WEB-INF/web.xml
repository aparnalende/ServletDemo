<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>AllDemos</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>MyServletCoockie</display-name>
		<servlet-name>MyServletCoockie</servlet-name>
		<servlet-class>com.demo.servlet.cookie.MyServletCoockie</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MyServletCoockie</servlet-name>
		<url-pattern>/validate</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>First</display-name>
		<servlet-name>First</servlet-name>
		<servlet-class>com.demo.servlet.cookie.First</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>First</servlet-name>
		<url-pattern>/First</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>Second</display-name>
		<servlet-name>Second</servlet-name>
		<servlet-class>com.demo.servlet.cookie.Second</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Second</servlet-name>
		<url-pattern>/Second</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>com.demo.servlet.listener.MyListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.demo.servlet.listener.MySessionCounter</listener-class>
	</listener>
	<servlet>
		<description></description>
		<display-name>Applicant</display-name>
		<servlet-name>Applicant</servlet-name>
		<servlet-class>com.context.config.Applicant</servlet-class>
		<init-param>
			<param-name>Email</param-name>
			<param-value>applicant@gmail.com</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Applicant</servlet-name>
		<url-pattern>/Applicant</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>Recruiter</display-name>
		<servlet-name>Recruiter</servlet-name>
		<servlet-class>com.context.config.Recruiter</servlet-class>
		<init-param>
			<param-name>Email</param-name>
			<param-value>recruiter@gmail.com</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Recruiter</servlet-name>
		<url-pattern>/Recruiter</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>Website-name</param-name>
		<param-value>NewWebsite.com</param-value>
	</context-param>
</web-app>
